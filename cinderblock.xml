<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
    <block
        name="libfreenect2"
        id="info.izumin.cinder.freenect2.system"
        author="Masayuki Izumi"
        license="Apache 2.0"
        summary="libfreenect2"
        git="git://github.com/izumin5210/Cinder-Freenect2-System.git"
        version="0.2.0"
        libraryUrl="http://github.com/OpenKinect/libfreenect2"
        >
        <includePath system="true">/usr/local/include/libusb-1.0</includePath>
        <includePath system="true">/usr/local/include/libfreenect2</includePath>
        <includePath system="true">/usr/local/include/ni2</includePath>
        <includePath system="true">/usr/local/include/nite2</includePath>
        <platform os="macosx">
            <dynamicLibrary>/usr/local/lib/libusb-1.0.0.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/libusb-1.0.dylib</dynamicLibrary>
            <staticLibrary>/usr/local/lib/libusb-1.0.a</staticLibrary>

            <dynamicLibrary>/usr/local/lib/ni2/libOpenNI2.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/ni2/libNiTE2.dylib</dynamicLibrary>

            <dynamicLibrary>/usr/local/lib/libfreenect2.0.2.0.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/libfreenect2.0.2.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/libfreenect2.dylib</dynamicLibrary>

            <dynamicLibrary>/usr/local/lib/ni2/OpenNI2/Drivers/libOniFile.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/ni2/OpenNI2/Drivers/libFreenect2Driver.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/ni2/OpenNI2/Drivers/libfreenect2-openni2.0.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/ni2/OpenNI2/Drivers/libfreenect2-openni2.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/ni2/OpenNI2/Drivers/libPS1080.dylib</dynamicLibrary>
            <dynamicLibrary>/usr/local/lib/ni2/OpenNI2/Drivers/libPSLink.dylib</dynamicLibrary>
        </platform>
    </block>
</cinder>
